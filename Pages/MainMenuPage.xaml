<Page x:Class="teacher69.Pages.MainMenuPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:teacher69.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MainMenuPage">

    <Grid>
        <UniformGrid
            Columns="1"
            Rows="5"
            >
            <Button x:Name="AddStudentBtn" Content="Добавить студента" Click="AddStudentBtn_Click"></Button>
            <Button x:Name="AddRatingBtn" Content="Добавить оценку" Click="AddRatingBtn_Click"></Button>
            <Button x:Name="AllStudentBtn" Content="Список студентов" Click="AllStudentBtn_Click"></Button>
            <Button x:Name="EditRatingBtn" Content="Редактировать оценки" Click="EditRatingBtn_Click"></Button>
            <Button x:Name="DeleteStudentBtn" Content="Удалить студента" Click="DeleteStudentBtn_Click"></Button>

        </UniformGrid>
    </Grid>
</Page>
